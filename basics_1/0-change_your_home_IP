#!/bin/bash


# Backup the original /etc/hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Modify /etc/hosts file to update localhost and facebook.com
sudo sed -i 's/127.0.0.1\s*localhost/127.0.0.2 localhost/' /etc/hosts

# add or replace facebook.com to resolve 8.8.8.8
if grep -q "facebook.com" /etc/hosts; then
  sudo sed -i 's/.*facebook.com.*/8.8.8.8 facebook.com/' /etc/hosts
else
  echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts
fi

echo "IP changes applied. Localhost now resolves to 127.0.0.2, and facebook.com resolves to 8.8.8.8."

echo "Modified /etc/hosts file:"
cat /etc/hosts
